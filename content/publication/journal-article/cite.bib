issn = {21507511},
journal = {mBio},
keywords = {,Aspergillus fumigatus,CcpA,Dendritic cell,Epithelial cell,Immune response,Mass spectrometry,Neutrophil,Resting conidia,Surface proteome,Swollen conidia,T cells,Trypsin shaving},
number = {5},
pages = {1--18},
