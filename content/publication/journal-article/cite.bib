journal = {Antimicrobial Agents and Chemotherapy},
number = {5},
pages = {1855--1863},
pmid = {20231390},
title = {{Persistence of uropathogenic Escherichia coli in the face of multiple antibiotics}},
volume = {54},
year = {2010}
}
